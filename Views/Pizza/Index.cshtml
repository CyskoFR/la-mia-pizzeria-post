@{
    ViewData["Title"] = "Home Page";

    @model List<Pizza>
}

<body>
    <section class="text-center text-white">
        <div class="container m-auto">
            <div class="row">
                @if (Model.Count > 0)
                {
                    @foreach (Pizza pizza in Model)
                    {
                        <div class="col-3">
                            <a class="text-decoration-none" href="@Url.Action("Show","Pizza", new{ Id = pizza.Id})">
                                <div class="card bg-dark bg-gradient text-white border-2 rounded-lg border-warning">

                                    <img class="img-fluid" src="@pizza.Picture" alt="@pizza.Name"/>

                                    <h3 class="py-1">@pizza.Name</h3>

                                    <span class="py-1">€ @pizza.Price</span>

                                    <p class="px-2 font-weight-bold"><b>Ingredienti: </b><small>@pizza.Description</small></p>
                                </div>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <h2>Il menu e' vuoto</h2>
                }
            </div>
        </div>
    </section>
</body>