@{
    ViewData["Title"] = "Home Page";
}
@model Pizza

<body>
    <section class="text-center bg-dark bg-gradient text-white py-5">
        <div class="container">
            <div class="text-white border-2 border-white">
                <div class="row">
                    <div class="col-4">
                        <img class="img-fluid" src="@Model.Picture" alt="@Model.Name" />
                    </div>
                    <div class="col">
                        <div class="d-flex justify-content-around align-items-center  py-2">
                            <h3 class="py-1">@Model.Name</h3>
                            <span class="py-1">€ @Model.Price</span>
                        </div>
                        <p class="px-2"><b>Ingredienti: </b><small>@Model.Description</small></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <a href="@Url.Action("Index", "Pizza")" class="btn btn-outline-info">
        Torna Indietro
    </a>
</body>